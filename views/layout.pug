            // .foot-about
          // .col
          .col-12.col-md-6.col-lg-3.mt-5.mt-md-0
            .foot-contact
              h2 Contact Us
              ul
                li Email: info.deertcreative@gmail.com
                li Phone: (+88) 111 555 666
                li Address: 40 Baria Sreet 133/2 NewYork City, US
            // .foot-contact
          // .col
          .col-12.col-md-6.col-lg-3.mt-5.mt-lg-0
            .quick-links.flex.flex-wrap
              h2.w-100 Quick Links
              ul.w-50
                li
                  a(href='#') About 
                li
                  a(href='#') Terms of Use 
                li
                  a(href='#') Privacy Policy 
                li
