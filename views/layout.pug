      .container
        .row.flex-wrap.justify-content-center.justify-content-lg-between.align-items-center
          .col-12.col-lg-6
            .download-apps.flex.flex-wrap.justify-content-center.justify-content-lg-start.align-items-center
              a(href='#')
                img(src='images/app-store.png', alt='')
              a(href='#')
                img(src='images/play-store.png', alt='')
            // .download-apps
          .col-12.col-lg-6.mt-4.mt-lg-0
            .footer-bar-nav
              ul.flex.flex-wrap.justify-content-center.justify-content-lg-end.align-items-center
                li
                  a(href='#') DPA
