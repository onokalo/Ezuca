                li
                  a(href='#') Language Packs
                li
                  a(href='#') Release Status
            // .quick-links
          // .col
          .col-12.col-md-6.col-lg-3.mt-5.mt-lg-0
            .follow-us
              h2 Follow Us
              ul.follow-us.flex.flex-wrap.align-items-center
                li
                  a(href='#')
                    i.fa.fa-facebook
                li
                  a(href='#')
                    i.fa.fa-google-plus
                li
                  a(href='#')
                    i.fa.fa-instagram
                li
                  a(href='#')
                    i.fa.fa-twitter
